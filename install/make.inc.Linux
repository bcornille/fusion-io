CC = cc
CXX = mpicxx
CFLAGS = -Wall -fPIC -Og -g -std=c++11

F90 = mpif90
F90FLAGS = -Wall -fdefault-real-8 -fimplicit-none -fPIC -g

PYTHON = python3

ARCH = ar cr

LDD = $(CXX) -shared
LD = $(CXX)
LDFLAGS = -fPIC

INCLUDE = -I/usr/include/hdf5/serial

LIBS = -L/usr/lib/gcc/x86_64-linux-gnu/5 -lgfortran

HDF5_LIBS = -lhdf5_serial -lz
LAPACK = -llapack
